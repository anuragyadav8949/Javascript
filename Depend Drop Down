<!-- Page script -->
<script>
    $(function () {
      //Initialize Select2 Elements
      $(".select2").select2();
      $(".timepicker").timepicker({
      showInputs: false
    });

    $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
      checkboxClass: 'icheckbox_minimal-blue',
      radioClass: 'iradio_minimal-blue'
    });
});
</script>
<script>
  
  $(document).ready(function(){
        //Get Vendor From Area
        $("#area").change(function(){
        var location_id = (this).value;
        $.ajax({
          type:"POST",
          url:"<?php echo base_url();?>admin/Orders/getVendor",
          data:{location_id:location_id},
          success:function(response){
                // console.log(response);
                result =$.parseJSON(response);
                $('#vendor').empty();
                $.each(result,function(key,value){
                    $('#vendor').
                    append('<option value="'+ value.id +'">'+ value.firstname +'</option>');
                }); 
          },
          error:function(e)
          {
            console.log(e);
          }
        }); 

        //Get Delivery Boy
        $.ajax({
          type:"POST",
          url:"<?php echo base_url();?>admin/Orders/getDelivery",
          data:{location_id:location_id},
          success:function(response){
                // console.log(response);
                result =$.parseJSON(response);
                $('#delivery_person').empty();
                $.each(result,function(key,value){
                    $('#delivery_person').
                    append('<option value="'+ value.id +'">'+ value.firstname +'</option>');
                }); 
          },
          error:function(e)
          {
            console.log(e);
          }
        }); 
      });
  });
    

    //Get Delivery from Area
</script>

